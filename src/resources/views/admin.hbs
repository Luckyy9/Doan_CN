        </div>
        {{!-- end layout quesion --}}
        {{!--  layout news --}}

        <div id="news-admin-js" class="new-admin tabcontent-admin">
           
            <div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">Bài viết
                                <small>Danh sách</small>
                                <a href="/admin/create"><button id="btn-add-course-admin" class="add-course-admin">Thêm bài viết</button></a>
                                
                            </h1>
                        </div>
                        <!-- /.col-lg-12 -->
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr align="center">
                                    <th>Tên tin tức</th>
                                    <th>Nội dung</th>
                                    <th>Hình ảnh</th>
                                    <th>Xóa </th>
                                    <th>Sửa</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                {{#each news}}
                                <tr class="odd gradeX" align="center">
                                    <td>{{this.name}}</td>
                                    <td style="max-height: 72px; overflow: hidden;">{{this.description}}</td>
                                    <td>{{this.image}}</td>
                                    <td class="center"><a href="/admin/{{this._id}}/edit"><i class="fas fa-pencil-alt"></i> </a></td>
                                    <td class="center"><a data-toggle="modal" data-id="{{this._id}}" data-target="#deleteModal" href=""><i class="fas fa-trash-alt"></i></a></td>
                                                                      
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="6"class="text-center"> Không có bài viết nào!</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
        
        </div>
        {{!-- end layout news --}}

        {{!-- comfirm delete --}}
       <div id="deleteModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xoá khóa học</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa học !.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-delete-course" class="btn btn-danger" data-dismiss="modal">Xóa</button>
                    <button type="button" class="btn btn-secondary"data-dismiss="modal">Hủy</button>
                </div>
                </div>
            </div>
        </div>
        {{!-- delete form --}}
        <form name="deleteform" method="POST" ></form>
        <!-- /#page-wrapper -->
</div>
 
<script>
    var idcourse;
    var deleteform= document.forms['deleteform'];
    var deletecourse= document.getElementById('btn-delete-course');

    function openPage(pageName,btnName) {
    var i, tabcontent, tablinks;
    tablinks = document.getElementsByClassName("btn-tablink-admin");
    tabcontent = document.getElementsByClassName("tabcontent-admin");
    for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
        tablinks[i].style.backgroundColor="#FBFBFB";
        tablinks[i].style.color="#F81717";

    }
    
    document.getElementById(btnName).style.backgroundColor="#F81717";
    document.getElementById(btnName).style.color="#FBFBFB"
    document.getElementById(pageName).style.display = "block";
    
    }
    document.getElementById("courses-admin-js").click();
    document.addEventListener('DOMContentLoaded', function(){
        $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget) 
                idcourse = button.data('id') 
                console.log(idcourse)
            })
    })
   
    deletecourse.onclick= function(){
        deleteform.action='/admin/delete/'+idcourse+'?_method=DELETE';
        deleteform.submit();
    }
    
</script>